<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cine.controlador.ViewPrincipalController">
   <top>
      <VBox style="-fx-background-color: #29242C; -fx-padding: 20;" BorderPane.alignment="CENTER">
         <Label fx:id="clienteLabel" text="Bienvenido" textFill="WHITE">
            <font>
               <Font name="Segoe UI Semibold" size="24.0" />
            </font>
         </Label>
      </VBox>
   </top>
   
   <center>
      <VBox style="-fx-spacing: 20; -fx-padding: 20;" BorderPane.alignment="CENTER">
         <Label text="Selecciona una sala:" textFill="#333333">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <ListView fx:id="salasListView" prefHeight="400.0" />
      </VBox>
   </center>
   
   <bottom>
      <HBox spacing="10" style="-fx-padding: 20; -fx-alignment: center;" BorderPane.alignment="CENTER">
         <Button text="Comprar Entrada" onAction="#btnComprar" prefWidth="150" style="-fx-font-size: 14; -fx-background-color: #4ECDC4; -fx-text-fill: white; -fx-font-weight: bold;" />
         <Button text="Salir" onAction="#btnSalir" prefWidth="150" style="-fx-font-size: 14; -fx-background-color: #FF6B6B; -fx-text-fill: white; -fx-font-weight: bold;" />
      </HBox>
   </bottom>
</BorderPane>